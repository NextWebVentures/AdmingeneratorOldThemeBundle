    protected function getQuery()
    {
        $query = $this->getDoctrine()
                    ->getEntityManager()
                    ->createQueryBuilder()
                    ->select('q')
                    ->from('{{ model }}', 'q');
        
        if($this->getSortColumn()) { //@todo implement join method to sort on undirect columns
            $query->orderBy('q.'.$this->getSortColumn(), $this->getSortOrder());
        }
                    
        return $query->getQuery();
    }
    
